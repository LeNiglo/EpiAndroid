<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="true"
    android:orientation="vertical"
    android:background="#005DA1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/next_susie"
        android:id="@+id/textView3"
        android:gravity="center_vertical|center_horizontal"
        android:background="#005DA1"
        android:textColor="#ffffff" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#006EB2"
        android:layout_margin="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/nothing_to_show"
            android:id="@+id/susie_nothing"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffffff"
            android:visibility="visible"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_to_susie"
            android:id="@+id/susie_button"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/susie_nothing"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/susie_date"
            android:layout_gravity="right"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/susie_login"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/susie_type"
            android:layout_toRightOf="@+id/susie_login"
            android:layout_toEndOf="@+id/susie_login"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/susie_login"
            android:layout_marginTop="3dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/susie_description"
            android:layout_alignStart="@+id/susie_login"
            android:layout_below="@+id/susie_login"
            android:layout_marginBottom="10dp"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/next_activity"
        android:id="@+id/textView8"
        android:gravity="center_vertical|center_horizontal"
        android:background="#005DA1"
        android:textColor="#ffffff" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#006EB2"
        android:layout_margin="0dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/nothing_to_show"
            android:id="@+id/rdv_nothing"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffffff"
            android:visibility="visible" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="28-08-2015 15:00:00"
            android:id="@+id/rdv_date"
            android:layout_gravity="right"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SÃ©ance de coaching"
            android:id="@+id/rdv_title"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(coaching)"
            android:id="@+id/rdv_type"
            android:layout_toRightOf="@+id/rdv_title"
            android:layout_toEndOf="@+id/rdv_title"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/rdv_title"
            android:layout_marginTop="3dp"
            android:visibility="gone" />

        <com.gc.materialdesign.views.ProgressBarDeterminate
            android:id="@+id/progress_rdv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:layout_alignStart="@+id/rdv_title"
            android:layout_below="@+id/rdv_title"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="false"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>