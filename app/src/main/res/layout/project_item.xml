<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:custom="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="80dp"
android:orientation="vertical"
android:longClickable="true"
android:clickable="true">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:id="@+id/submission_title"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:textColor="#ff000000"
    android:layout_marginRight="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:weightSum="1"
        android:id="@+id/linearLayout2"
        android:background="#42A5F5"
        android:layout_below="@+id/difftext"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9">

        <TextView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_weight="0.9"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/start"
            android:background="#1A237E" />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="15dp"-->
            <!--android:gravity="center"-->
            <!--android:layout_weight="0.5"-->
            <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
            <!--android:id="@+id/end" />-->
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView9"
        android:layout_above="@+id/linearLayout2"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#8864B5F6"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/difftext"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/submission_title"
        android:layout_alignStart="@+id/submission_title" />

</RelativeLayout>